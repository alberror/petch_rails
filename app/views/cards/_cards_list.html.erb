<div class="row mb-5">
  <% cards.each_with_index do |card, index| %>
    <div class="col-12 col-sm-6 col-md-4 card-container d-flex justify-content-center">
      <%= link_to card_path(card) do %>
        <div class="article-card">
          <%= image_tag url_for(card.thumbnail) %>
          <div class="card-desc">
            <h4><%= card.specie.name %></h4>
            <p><%= raw card.body.slice(0, 50) %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<div class="pagination">
  <%= raw pagy_nav(@pagy) %>
</div>
