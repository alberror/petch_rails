<div class="articles-wrapper">
  <div class="filter">
    <i class="fas fa-grip-lines-vertical" id="filter-toggle"></i>
    <div class="filter-form">
      <%= simple_form_for :filter_data, url: articles_path, method: :get do |f| %>
      <div class="animals-filter">
        <h5>Animaux</h5>
        <hr>
        <div class="row">
          <% Article::ANIMALS.each do |animal| %>
            <div class="col-4">
              <%= f.input animal.to_sym, as: :boolean, input_html: { class: 'd-none' },
              label: Article::ANIMALS_ICONS[animal.to_sym].html_safe %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="themes-filter">
        <h5>Themes</h5>
        <hr>
        <% Article::THEMES.each do |theme| %>
          <%= f.input theme.to_sym, as: :boolean, input_html: { class: 'd-none' } %>
        <% end %>
      </div>
        <%= f.submit 'Filtrer', class: 'filter-btn' %>
      <% end %>
    </div>
  </div>

  <div class="container translate-nav">
    <div class="articles-container">
      <div class="articles-header">
        <h2>Articles Ã  la une !</h2>
      </div>

      <hr>

      <div class="row mb-5">
        <% @articles.each do |article| %>
          <div class="col-xs-12 col-sm-6 col-md-4 d-flex justify-content-center mb-5">
            <%= link_to article_path(article) do %>
              <div class="article-card">
                <%= image_tag url_for(article.thumbnail) %>
                <div class="card-desc">
                  <h4><%= article.title %></h4>
                  <p><%= article.subtitle %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
