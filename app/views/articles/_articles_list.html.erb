<div class="row mb-5">
  <% articles.each_with_index do |article, index| %>
    <div class="col-12 col-sm-6 col-md-4 card-container d-flex justify-content-center">
      <%= link_to article_path(article) do %>
        <div class="article-card">
          <%= image_tag url_for(article.thumbnail) %>
          <div class="card-desc">
            <h4><%= article.title %></h4>
            <p><%= article.subtitle %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<div class="pagination">
  <%= raw pagy_nav(@pagy) %>
</div>
