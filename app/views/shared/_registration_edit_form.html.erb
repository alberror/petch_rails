<div class="devise-form-wrapper devise-profile-wrapper pb-5">
  <%= simple_form_for(current_user, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <h2>Éditer votre profil</h2>
    <%= f.error_notification %>

    <div class="form-inputs">

    <div class="row">
      <div class="col"><%= f.input :first_name, label: false, placeholder: 'Prénom' %></div>
      <div class="col"><%= f.input :last_name, label: false, placeholder: 'Nom' %></div>
      <div class="col"><%= f.input :avatar, direct_upload: true %></div>
    </div>

    <div class="row">
      <div class="col"><%= f.input :profession, label: false, placeholder: 'Profession' %></div>
      <div class="col"><%= f.input :signature, label: false, placeholder: 'Signature' %></div>
    </div>

      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label: false,
                  placeholder: 'Email'%>
      <%= f.input :current_password,
                  hint: "Votre mot de passe est obligatoire pour enregistrer vos changements.",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" },
                  label: false,
                  placeholder: 'Mot de passe' %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" },
                  label: false,
                  placeholder: 'Confirmation' %>

    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Edit", class: 'petch-btn' %>
      <%#= render "devise/shared/links" %>
    </div>
  <% end %>

</div>
