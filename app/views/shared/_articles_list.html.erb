<div class="row mb-5">
  <% cards.each_with_index do |card, index| %>
    <div class="col-xs-12 col-md-4 card-container d-flex justify-content-center">
      <%= link_to article_path(card) do %>
        <div class="article-card">
          <%= image_tag url_for(card.thumbnail) %>
          <div class="card-desc mt-1">
            <h4><%= card.title %></h4>
            <p><%= card.subtitle %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<div class="pagination">
  <%= raw pagy_nav(@pagy) %>
</div>

