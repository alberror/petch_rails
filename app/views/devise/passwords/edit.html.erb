<div class="container d-flex-center mb-5" style="margin-top: 9em;">
  <div class="user-form-wrapper fields-area" style="width: 60%;">
    <h2 class="mb-5">RÃ©initialisation</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="d-flex-center form-inputs my-3">
        <div style="width: 60%; display: flex; flex-direction: column; align-items: flex-start;">
          <div class="field" style="width: 100% !important;">
            <%= f.label :password, "Nouveau mot de passe" %><br />
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'email_recover', placeholder: "#{@minimum_password_length} charachters, minimum" %>
          </div>
          <br>
          <div class="field" style="width: 100% !important;">
            <%= f.label :password_confirmation, "Confirmation" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'email_recover' %>
          </div>

          <div class="actions mt-3" style="width: 100% !important;">
            <%= f.submit "Change my password", class: 'btn petch-btn mt-3 mb-5', id: 'recover_btn' %>
          </div>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<style>
  .email_recover {
    width: 100%;
    height: 2em;
  }

  #recover_btn {
    margin: 0 auto;
  }
</style>
