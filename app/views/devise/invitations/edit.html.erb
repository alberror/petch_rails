<div class="container d-flex-center" style="height: calc(100vh - 96px);">
  <div class="user-form-wrapper fields-area" style="width: 80%;">

    <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
    <div class="errors mb-3">
      <% resource.errors.full_messages.each do |msg| %>
        <span><%= msg %>, </span>
      <% end %>
    </div>
      <%= f.hidden_field :invitation_token %>

      <div class="form-inputs">
        <div class="d-flex-between">
          <h2>Confirmation d'inscription</h2>
          <%= f.input :avatar %>
        </div>
        <div class="row">
          <div class="col-6">
            <%= f.input :first_name,
                        label: 'Prénom',
                        placeholder: 'Votre Prénom',
                        required: false %>
          </div>
          <div class="col-6">
            <%= f.input :last_name,
                        label: 'Nom',
                        placeholder: 'Votre Nom',
                        required: false %>
          </div>
          <div class="col-6">
            <%= f.input :profession,
                        label: 'Profession',
                        placeholder: 'Metier, Activité',
                        hint: 'Vétérinaire, Eleveur canin...',
                        required: false %>
          </div>
          <div class="col-6">
            <%= f.input :signature,
                        label: 'Signature',
                        placeholder: 'Dr. John Doe',
                        hint: 'Cette signature apparaitra en en-tête des conseils',
                        required: false %>
          </div>
          <div class="col-6">
            <%= f.input :password, required: true %>
          </div>
          <div class="col-6">
            <%= f.input :password_confirmation, required: true %>
          </div>
        </div>
      </div>

      <div class="form-actions d-flex-center mt-5 mb-3">
        <%= f.button :submit, t("devise.invitations.edit.submit_button"), class: 'btn petch-btn' %>
      </div>
    <% end %>
  </div>
</div>
