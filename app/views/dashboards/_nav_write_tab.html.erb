<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<div class="tab-pane fade" id="nav-write" role="tabpanel" aria-labelledby="nav-write-tab">
  <nav>
    <div class="nav nav-tabs" id="myList" role="tablist">
      <a class="nav-item nav-link" data-toggle="list" href="#home" role="tab">Fiche</a>
      <a class="nav-item nav-link" data-toggle="list" href="#profile" role="tab">Article</a>
      <a class="nav-item nav-link" data-toggle="list" href="#messages" role="tab">Marque</a>
    </div>
  </nav>

  <!-- Tab panes -->
  <div class="tab-content">
    <div class="tab-pane active" id="home" role="tabpanel">
      <div class="form-content">
        <%= simple_form_for(@fiche) do |f| %>
        <h2>Fiche</h2>
          <div class="row">
            <div class="col-12">
              <%= f.input :animal, collection: Article::ANIMALS %>
            </div>
            <div class="col-12">
              <%= f.input :title, label: false, placeholder: 'Titre' %>
            </div>
            <div class="col-12">
              <%= f.input :description, label: false, placeholder: 'Description' %>
            </div>

              <%= f.submit id: 'real-submit', class: 'd-none' %>
              <button id="fake-submit" class="btn btn-primary">Submit</button>

            <div class="col-9">
              <div id="editor"></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="tab-pane" id="profile" role="tabpanel">
      <div class="form-content" id="article-form">
        <%= render 'shared/article_form' %>
      </div>
    </div>
    <div class="tab-pane" id="messages" role="tabpanel">Marque</div>
  </div>
</div>
